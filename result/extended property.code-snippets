        "-- ===========================================",
        "-- Extended Properties on Database template",
        "-- ===========================================",
        "USE ${1:AdventureWorks}",
        "GO",
        "",
        "-- Add an extended property to a database",
        "EXEC sp_addextendedproperty ",
        "\t@name=N'${2:Created_By}', ",
        "\t@value=N'${3:Property value here}' ",
        "GO",
        "",
        "-- Modify an existing extended property on a database",
        "EXEC sp_updateextendedproperty ",
        "\t@name=N'MS_Description', ",
        "\t@value=N'${4:AdventureWorks Sample Database}' ",
        "GO",
        "",
        "-- List the extended properties for the database object",
        "SELECT name, value",
        "FROM fn_listextendedproperty(default, default, default, default, default, default, default);",
        "GO",
        "",
        "-- Drop the new extended property (${2:Created_By})",
        "EXEC sp_dropextendedproperty @name=N'${2:Created_By}' ",
        "GO",
