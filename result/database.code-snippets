},"Detach Database":{
    "scope": "sql",
    "prefix": "ssmsDetachDatabase",
    "body": [
        "--=====================================",
        "-- Detach database template",
        "--=====================================",
        "EXEC sp_detach_db @dbname = '${1:your_database_name}'",
        "     ,@skipchecks = 'true'",
        "     ,@KeepFulltextIndexFile = 'true'",
        "GO",
        ""
    ],
    "description": "Detach Database"
