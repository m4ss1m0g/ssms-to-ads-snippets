{"Add Extended Properties to Table":{
    "scope": "sql",
    "prefix": "ssmsAddExtendedPropertiestoTable",
    "body": [
        "-- =========================================",
        "-- Add Extended Properties to Table template",
        "-- =========================================",
        "USE ${1:AdventureWorks}",
        "GO",
        "",
        "IF OBJECT_ID('${2:dbo}.${3:sample_table}', 'U') IS NOT NULL",
        "  DROP TABLE ${2:dbo}.${3:sample_table}",
        "GO",
        "",
        "CREATE TABLE ${2:dbo}.${3:sample_table}",
        "(",
        "\t${4:c1} ${5:int} ${6:NOT NULL}, ",
        "    CONSTRAINT ${7:PK_sample_table} PRIMARY KEY (${4:c1})",
        ")",
        "-- Add description to table object",
        "EXEC sys.sp_addextendedproperty ",
        "\t@name=N'MS_Description', ",
        "\t@value=N'${8:Table description here}' ,",
        "\t@level0type=N'SCHEMA', ",
        "\t@level0name=N'${2:dbo}', ",
        "\t@level1type=N'TABLE', ",
        "\t@level1name=N'${3:sample_table}'",
        "GO",
        "",
        "-- Add description to a specific column",
        "EXEC sys.sp_addextendedproperty ",
        "\t@name=N'MS_Description', ",
        "\t@value=N'${9:Column description here}' ,",
        "\t@level0type=N'SCHEMA', ",
        "\t@level0name=N'${2:dbo}', ",
        "\t@level1type=N'TABLE', ",
        "\t@level1name=N'${3:sample_table}', ",
        "\t@level2type=N'COLUMN', ",
        "\t@level2name=N'${4:c1}'",
        "GO",
        ""
    ],
    "description": "Add Extended Properties to Table"
},"Extended Properties on Database":{
    "scope": "sql",
