        "-- Drop the database if it already exists",
        "IF  EXISTS (",
        "\tSELECT name ",
        "\t\tFROM sys.databases ",
        "\t\tWHERE name = N'${1:Database_Name}'",
        ")",
        "DROP DATABASE ${1:Database_Name}",
        "GO",
        "",
        "CREATE DATABASE ${1:Database_Name}",
        "GO"
    ],
